<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:weightSum="1"
    android:baselineAligned="false"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.72"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/job_title"
	        android:textSize="14sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:ellipsize="end"
	        android:singleLine="true"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/job_employer"
	        android:ellipsize="end"
	        android:singleLine="true"
	        android:layout_marginTop="-5dp"
	        android:textSize="20sp"
	        android:textColor="@color/job_widget_employer_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
	    <TextView
	        android:id="@+id/location"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
	    <TextView
	        android:id="@+id/job_last_day"
	        android:textSize="12sp"
	        android:layout_marginTop="-6dp"
	        android:textColor="@color/job_widget_date_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
	
	    <TextView
	        android:id="@+id/job_apps"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0.28"
        android:layout_height="wrap_content">
        <TextView
	        android:id="@+id/job_status_first_line"
	        android:layout_width="wrap_content"
	        android:layout_gravity="right"
	        android:textSize="14sp"
	        android:textColor="@color/job_widget_status_text"
	        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/job_status_second_line"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-2dp"
            android:textSize="14sp"
            android:textColor="@color/job_widget_status_text"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>