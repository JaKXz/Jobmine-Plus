<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Generic Styles -->
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Home Style -->
    <style name="category_button_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">1</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="category_button">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="category_button_image">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="category_button_text" parent="wrap">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="uppercase">true</item>
        <item name="android:tag">text</item>
    </style>
    
    <!-- Job description Styles -->
    <style name="description_layout">
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:orientation">vertical</item>
    </style>
    <style name="description_title" parent="wrap">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/description_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">-2dp</item>
    </style>
    <style name="description_text" parent="wrap">
        <item name="android:textColor">@color/description_text</item>
    </style>

    <!-- Job Interview Styles -->
    <style name="interview_text" parent="wrap">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:textColor">@color/details_text</item>
    </style>

    <!-- Job Search Style -->
    <style name="job_search_style" parent="wrap">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="job_search_text" parent="wrap">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="job_search_checkbox_layout" parent="wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="job_search_displines" parent="job_search_style">
        <item name="android:entries">@array/job_search_disciplines</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>