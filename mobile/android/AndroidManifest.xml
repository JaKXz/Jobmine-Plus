<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jobmineplus.mobile"
    android:versionCode="1"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    android:versionName="1.0" >
	<uses-permission
        android:name="android.permission.INTERNET" />
	 <uses-permission 
	     android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	 <uses-permission 
	     android:name="android.permission.ACCESS_FINE_LOCATION"/>
	 <uses-permission 
	     android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    
    <uses-sdk android:minSdkVersion="8" />
    
    <!-- 
    If you want to use the real application use this instead of the 
    debug one
    
            android:name=".JbmnplsApplication" 
            
            Debug one
            
            android:name=".debug.DebugApplication"
    -->
    
    <application
        android:name=".debug.DebugApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps"/>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER.OLD" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".activities.HomeActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:label="@string/app_name" />
        <activity 
            android:name=".activities.jbmnpls.Applications"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" />
        <activity 
            android:name=".activities.jbmnpls.Description"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" />
        
        <!-- DEBUG -->
        <activity
            android:name=".debug.DebugLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".debug.DebugHomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
        <activity 
            android:name=".debug.activities.DebugApplications"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
        <activity 
            android:name=".debug.activities.DebugDescription"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
    </application>

</manifest>