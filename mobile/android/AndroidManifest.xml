<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jobmineplus.mobile"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    android:versionCode="1"
    android:versionName="1.0" >

    
    <uses-permission android:name="android.permission.INTERNET" />
    
    <uses-sdk android:minSdkVersion="8" />

    <!--
    If you want to run debug mode (like autologin and stuff) remove
    the android:name="...."
            
    To run in debug mode, add this to application's attributes below
            
            android:name=".debug.DebugApplication"
    -->

    <application
        android:name=".debug.DebugApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER.old" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
        <activity
            android:name=".activities.jbmnpls.Applications"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.jbmnpls.Description"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.jbmnpls.Shortlist"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.jbmnpls.Interviews"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" />

        <!-- DEBUG -->
        <activity
            android:name=".debug.DebugLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".debug.DebugHomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
        <activity
            android:name=".debug.activities.DebugApplications"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
        <activity
            android:name=".debug.activities.DebugDescription"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
        <activity
            android:name=".debug.activities.DebugShortlist"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
        <activity
            android:name=".debug.activities.DebugInterviews"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/debug_title" />
        
        <service android:name=".services.InterviewsNotifierService" />    
        <receiver android:name=".services.InterviewsAlarm" />
    </application>

</manifest>